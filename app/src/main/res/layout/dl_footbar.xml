<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal"
    android:background="@mipmap/bar_bg">

    <LinearLayout
        android:id="@+id/ii_bottom_common"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imgHome"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@mipmap/bar_home_selected"
            android:clickable="true" />

        <ImageView
            android:id="@+id/imgClassify"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@mipmap/bar_class_normal"
            android:clickable="true" />

        <ImageView
            android:id="@+id/imgSearch"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@mipmap/bar_search_normal"
            android:clickable="true" />

        <ImageView
            android:layout_marginTop="3dp"
            android:id="@+id/imgShoppingCar"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:background="@mipmap/bar_shopping_normal"
            android:clickable="true" />

        <ImageView
            android:id="@+id/imgMore"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@mipmap/bar_more_normal"
            android:clickable="true" />
    </LinearLayout>

    <TextView
        android:background="@mipmap/number_bg"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="80dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="1"
        android:textColor="#ffffff" />
</RelativeLayout>