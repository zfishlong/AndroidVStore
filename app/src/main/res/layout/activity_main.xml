<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:id="@+id/dl_rl_title"
        android:layout_alignParentTop="true"
        layout="@layout/dl_titlebar" />

    <include
        android:id="@+id/dl_rl_bottom"
        android:layout_alignParentBottom="true"
        layout="@layout/dl_footbar" />

    <RelativeLayout
        android:id="@+id/dl_rl_middle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/dl_rl_bottom"
        android:layout_below="@id/dl_rl_title" >
    </RelativeLayout>

</RelativeLayout>
